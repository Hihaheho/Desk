*<
  @"files" [
    *<
      @"name" "main.ds",
      @"content" "
        'type add \\ *<@\"l\" 'number, @\"r\" 'number> -> @\"sum\" 'number;
        'handle '(
          $ ! \"a\" ~> 'number;
          <'number> ^add *<@\"l\" &'number, @\"r\" &'number>
        ') '{
          'string ~> 'number =>
            ^add *<
              @\"l\" ! 1 ~> 'number,
              @\"r\" ! 2 ~> 'number,
            >
        '}
      "
    >
  ],
  @"assertions" *<
    @"runs" [
      *<
        @"entrypoint" @"File" "main.ds",
        @"result" @"Success" @"Number" @"Integer" 6
      >
    ]
  >
>
